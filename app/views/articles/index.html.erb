<p id="notice"><%= notice %></p>

<h1>Artigos</h1>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>

      <% if user_signed_in? && policy(article).index? %>
        <td><%= link_to 'Mostrar', article %></td>
        <td><%= link_to 'Editar', edit_article_path(article) %></td>
        <td><%= link_to 'Deletar', article, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Artigo', new_article_path %>
